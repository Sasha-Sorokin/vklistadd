{
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["es2020"],
    "module": "CommonJS",
    "rootDir": "./",
    "moduleResolution": "node",

    "declaration": false,
    "declarationMap": false,
    "outDir": "../dist/build",
    "removeComments": true,
    "noEmit": true,
    "importHelpers": true,
    "importsNotUsedAsValues": "error",
    "inlineSourceMap": true,
    "newLine": "lf",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["./**/*"]
}
